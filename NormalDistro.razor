                        wait 100
                    endwhile
                    removelist 'SaveWorld'
                    removetimer 'WorldSave'
                    overhead '[RESUMING]' 68
                endif
            endif            
            if poplist ItemList front as pick
                lift pick 
                drop Distro x y 0
                while queued
                    wait 40
                endwhile
                wait 75
            endif
        else
